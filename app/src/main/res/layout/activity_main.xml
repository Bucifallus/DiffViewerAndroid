<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.android.tomac.myapplication.com.android.tomac.myapplication.MainActivity">

    <!-- view for AdMob Interstitial Ad -->

    <com.android.tomac.myapplication.CustomTextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="horizontal" />

    <view
        android:id="@+id/view3"
        class="com.android.tomac.myapplication.Draw"
        id="@+id/view2"
        layout_height="1000dp"
        layout_width="100dp"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:width="100dp"
        android:height="1000dp" />

    <com.android.tomac.myapplication.CustomTextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="horizontal" />

</LinearLayout>
